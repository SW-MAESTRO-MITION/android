<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="90.7dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_logo_gogobang" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8" />

    <TextView
        android:id="@+id/tv_nav_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="60.5dp"
        android:layout_marginRight="60.5dp"
        android:background="@drawable/background_button"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="로그인"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_nav_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="70.5dp"
        android:layout_marginLeft="60.5dp"
        android:layout_marginRight="60.5dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_button"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="회원가입"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</LinearLayout>
